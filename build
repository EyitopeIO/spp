#!/bin/bash

set -Ee

while : ; do
  option="$1"
  #echo "option is $option"
  case "$option" in
  -d)
      export DEBUG=y
      shift
      ;;
  -r)
      export RUNSPP=y
      shift
      ;;
  *)
     break
     ;;
  esac
done

mkdir -p cbuild
cd cbuild
cmake -DCMAKE_BUILD_TYPE=Debug ../
make
make tests
cd ../


if [ -n "$DEBUG" ] || [ -n "$RUNSPP" ]; then

  if [ ! -e cbuild/script1.sh ]; then
  cat > cbuild/script1.sh <<EOF
#!/bin/bash

print_startup_message(){
#-- @ifdef lorem_ipsum
  wget CPE_IPADDR/userconfig.yaml
#-- @endif
  script_name="$0"
  echo "Exiting $script_name"
}
print_startup_message
EOF
  fi

  set -x
  cbuild/spp -DTEST_ARG_1 -DTEST_ARG_2 -Dlorem_ipsum -Dyacc cbuild/script1.sh
  set +x
  shellcheck cbuild/script1.sh.spp
fi
